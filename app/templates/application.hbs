{{#global-header}}
  {{#if session.isAuthenticated}}
  <div class="col-md-8">
    <h3>hello, {{user.name}}</h3>
  </div>
  <div class="col-md-4">
    <button class="btn btn-primary" {{action 'invalidateSession'}}>Logout</button>
  </div>
  {{else}}
    <button class="btn btn-social btn-google" {{action 'authenticate' 'google-token'}}>
      <span class="fa fa-google"></span> Sign in with Google
    </button>
  {{/if}}
{{/global-header}}

<div class="container-fluid">
  {{outlet}}
</div>
